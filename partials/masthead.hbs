<div class="screen-size container-fluid no-padding">
    <div class="screen-size well well-inverse text-center flex flex-row no-padding background" {{#if @blog.cover}}style="background-image: url('{{@blog.cover}}');"{{/if}}>
        <div class="content flex flex-vertical-center">
            <div class="container-fluid">
                <div class="row">
                    {{#if @blog.logo}}
                    <div class="blog-logo">
                            <img src="{{@blog.logo}}" class="img-responsive img-rounded img-height-inherit center-block" />
                    </div>
                    {{/if}}
                </div>
                <div class="row masthead-title">
                    <h1>{{@blog.title}}</h1>
                    <h4>{{@blog.description}}</h4>
                </div>
                <div class="row masthead-social">
                    <a href="#">
                        <i class="btn fa fa-linkedin linkedin"></i>
                    </a>
                    <a href="//github.com/Elystus">
                        <i class="btn fa fa-github github"></i>
                    </a>
                    <a href="mailto:elystus@gmail.com">
                        <i class="btn fa fa-envelope send"></i>
                    </a>
                </div>
                <!--
                <div class="row well">
                    <div class="masthead-content">
                        <h2>{{@blog.title}}</h1>
                        <h4>{{@blog.description}}</h2>
                    </div>
                </div>
                -->
            </div> 
        </div>
        <div class="container-fluid footer no-margin no-padding masthead-navigation">
            <a href="#posts" class="blog-skip">
                <i class="glyphicon glyphicon-menu-down"></i>
            </a>
        </div>
    </div>
</div>
